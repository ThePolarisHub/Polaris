{
	"extends": "@polaris/typescript-config/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"next-international/*": ["../../node_modules/next-international/*"]
		},
		"strict": true
	},
	"include": [
		"next-env.d.ts",
		"next.config.js",
		"**/*.ts",
		"**/*.tsx",
		".next/types/**/*.ts",
		"tailwind.config.ts"
	],
	"exclude": ["node_modules"]
}
